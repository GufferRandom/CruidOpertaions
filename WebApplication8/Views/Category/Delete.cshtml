@model Category
<form method="Post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="mb-3 row">
            <label>Category Name</label>
            <input asp-for=Name class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">

                <button type="submit" class="btn btn-primary form-control">Delete</button>

            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Go Back to Category</a>
            </div>
        </div>

    </div>
</form>